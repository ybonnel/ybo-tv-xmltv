   foreach $chan (@data)
   {
#      print STDERR "Ligne Logo : " . $chan . "\n";
      @name_url = split('\|', $chan);
#      $xmltvid_map{$name_url[0]} = $name_url[1];
      $icon_map{$name_url[0]} = $name_url[2];
#      print $name_url[0]."|".$name_url[2]."\n";
   }
}





#***************************************************************************
# Sub sections
